<body onload="world()">
 <div id="earth_div"  class="wrapper">
   <div class="hover">
     <div class="row">
      <form action="/storylist" method="post">
        <element hidden id="user" name="user"><%= user.local.username %></element>

        <div class="select">
          <select name="location" id="location">
            <% locs.forEach(function(loc) { %>
              <option value=<%= loc.name %>><%= loc.name %></option>
            <% }); %>
          </select>
        </div>

        <!-- Question Prompt goes here -->
        <div class="animated zoomIn">
          <div class="card">
            <div class="card-content">
              <a class="btn-floating btn-small waves-effect waves-light red" onclick ="shuffle_question()"><i class="material-icons">replay</i></a>
              <span id="random_question"></span>
            </div>

            <div class="card-action">
              <div class="row">
                <div class="col s3">
                  <div class="animated flipInX" style="animation-delay: 0.5s;">
                    <i class="ion-waterdrop" style="font-size: 30px;"></i><b style="font-size: 30px;"> 20%</b> <i class="ion-arrow-up-a" style="font-size: 30px;  color: rgba(255, 0, 0, 0.6);"></i>
                  </div>
                </div>
                <div class="col s3">
                  <div class="animated flipInX" style="animation-delay: 0.7s;">
                    <i class="ion-thermometer" style="font-size: 30px;"></i><b style="font-size: 30px;"> 100F</b> <i class="ion-arrow-up-a" style="font-size: 30px;  color: rgba(255, 0, 0, 0.6);"></i>
                  </div>
                </div>
                <div class="col s3">
                  <div class="animated flipInX" style="animation-delay: 0.9s;">
                    <i class="ion-pizza" style="font-size: 30px;"></i><b style="font-size: 30px;"> 10%</b> <i class="ion-arrow-down-a" style="font-size: 30px;  color: rgba(255, 0, 0, 0.6);"></i>
                  </div>
                </div>
                <div class="col s3">
                  <div class="animated flipInX" style="animation-delay: 1.1s;">
                    <i class="ion-leaf" style="font-size: 30px;"></i><b style="font-size: 30px;"> 10%</b> <i class="ion-arrow-down-a" style="font-size: 30px;  color: rgba(255, 0, 0, 0.6);"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- End of question prompt -->

        <!-- Story input goes here -->
        <div class="animated zoomIn" style="animation-delay: 0.2s;">
          <div class="card" style="margin-bottom: 0px;">
            
               <div class="card-content">
                <div class="columns">
                  <div class="column is-half is-offset-one-quarter">
                    <input class="input" type="text" name="title" id="title" placeholder="Give your story a title!"></input>
                  </div>
                </div>
                <textarea id="textarea1" name="story" class="textarea" style="font-size: 20px; padding-bottom: 0px;padding-top: 0px; margin-bottom: 0px;" placeholder="I imagine..."></textarea>
                <br/>      
                <div class="columns">
                  <div class="column is-half is-offset-5">
                    <button class="button is-primary" type="submit">Submit</button>
                  </div>
                </div>
              </div>
            
          </div>
          <div id="triangle-down" style="align: right;"></div>
        </div>
        <!-- End of story input -->
      
      </form>
      <!-- End of form -->
  </div>
</div>
</div>

<div class="modal" id="myModal" >
    <div class="modal-background" id="background" ></div>
    <form action="/login" method="post">
        <div class="modal-card" >
            <header class="modal-card-head">
                <p class="modal-card-title">Login</p>
                <a class="delete" id="del"></a>
            </header>
            <section class="modal-card-body">
                <div class="field">
                    <label class="label">Username</label>
                    <p class="control">
                        <input class="input" type="text" name="username" id="username" placeholder="Enter your username">
                    </p>
                </div>
                <div class="field">
                    <label class="label">Password</label>
                    <p class="control">
                        <input class="input" type="password" name="password" placeholder="Enter your password here">
                    </p>
                </div>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-primary" id="submit">Submit</button>
                <a class="button" id="cancel">Cancel</a>
            </footer>
        </div>
    </form>
</div>
    
<script type="text/javascript">
    var modal = document.getElementById("myModal");
    document.getElementById("del").onclick = function() { modal.style.display = "none"; }
    document.getElementById("background").onclick = function() { modal.style.display = "none"; }
    document.getElementById("cancel").onclick = function() { modal.style.display = "none"; }
</script>


</body>
<script>
 shuffle_question();
</script>

</html>
