<!DOCTYPE>
<html ng-app="myApp">
<head>
	<!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css --> -->
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome --> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.3/css/bulma.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<title>iClimate App</title>
</head>

<body>
	<div class="container" ng-controller="AppCtrl">
		<h1>iClimate App</h1>
		<table class="table">
			<thead>
				<tr>
					<th>Author</th>
					<th>Story</th>
					<th>Comments</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td><input class="form-control" ng-model="story.author"></td>
					<td><input class="form-control" ng-model="story.text"></td>
					<td></td>
					<td><button class="btn btn-primary" ng-click="addStory()">Submit Story</td>
				</tr>
				<tr ng-repeat="story in storylist">
					<td>{{story.author}}</td>
					<td>{{story.text}}</td>
					<td>{{story.comments}}</td>
				</tr>
			</tbody>
		</table>
	</div>


	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
	<script src="../config/controller.js"></script>
	
</body>
</html>